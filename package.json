{
  "name": "store-website",
  "version": "1.0.0",
  "description": "E-commerce store with database",
  "main": "backend/databaseServer.js",
  "scripts": {
    "start": "node backend/databaseServer.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && node databaseServer.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": ["ecommerce", "react", "nodejs", "sqlite"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
